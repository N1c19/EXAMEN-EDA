public class Main {

    public static void main(String[] args) {
        int[] array = {2, 3, 4, 5};
        int sumaPares = 0;
        int sumaImpares = 0;

        for (int i = 0; i < array.length; i++) {
            if (array[i] % 2 == 0) {
                sumaPares += array[i];
            } else {
                sumaImpares += array[i];
            }
        }

        int R = sumaPares - sumaImpares;
        System.out.println(R);
    }
}

